{
  "ReverseProxy": {
    "Routes": {
      "msm-service-route": {
        "RouteId": "msm-service-route",
        "ClusterId": "msm-service-cluster",
        "RateLimiterPolicy": "customPolicy", //指定限流策略  disable 禁止全局限流
        "Match": {
          "Path": "/msm-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/msm-service"
          }
        ]
      }
    },
    "Clusters": {
      "msm-service-cluster": {
        "ClusterId": "msm-service-cluster",
        "HealthCheck": {
          "Active": { //主动健康检查示例  定时访问 /health 端点
            "Enabled": "true",
            "Interval": "00:00:10",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": { //启用被动健康检查  继承IPassiveHealthCheckPolicy接口自己写业务逻辑
            "Enabled": "true",
            "Policy": "CustomPassiveHealthCheckPolicy" //只有一个实现可不写
          }
          //"AvailableDestinationsPolicy": "HealthyOrPanic",
        },
        "Metadata": {
          "ConsecutiveFailuresHealthPolicy.Threshold": "3" //失败阈值超过3次标记不健康
        },
        "Destinations": {
          "msm-service-cluster/destination1": {
            "Address": "http://lzqnet.services.msm:8080/" //负载地址
          }
        }
      }
    }
  }
}