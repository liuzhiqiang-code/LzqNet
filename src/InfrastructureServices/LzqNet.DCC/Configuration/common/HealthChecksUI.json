{
  // HealthChecks UI 标准配置
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "apigateway",
        "Uri": "http://lzqnet.apigateway:8080/health"
      },
      {
        "Name": "auth",
        "Uri": "http://lzqnet.auth:8080/health"
      },
      {
        "Name": "msm-service",
        "Uri": "http://lzqnet.services.msm:8080/health"
      },
      {
        "Name": "notify-service",
        "Uri": "http://lzqnet.services.notify:8080/health"
      }
    ],
    "EvaluationTimeInSeconds": 60,
    "MinimumSecondsBetweenFailureNotifications": 1,

    // Webhook 通知配置
    "Webhooks": [
      {
        //自定义api通知
        "Name": "Custom API",
        "Uri": "http://lzqnet.healthcheckui:8080/send",
        "Payload": "{\"type\": \"failure\", \"service\": \"{{service}}\", \"failure\": \"{{failure}}\", \"description\": \"{{description}}\", \"timestamp\": \"{{now}}\"}",
        "RestorePayload": "{\"type\": \"restored\", \"service\": \"{{service}}\", \"timestamp\": \"{{now}}\"}"
      }
    ]
  }
}