      },
      {
        "Name": "Identity Service",
        "Uri": "https://localhost:7002/health"
      },
      {
        "Name": "Product Service",
        "Uri": "https://localhost:7003/health"
      },
      {
        "Name": "Order Service",
        "Uri": "https://localhost:7004/health"
